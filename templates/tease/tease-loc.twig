{% set coordonate = post.get_field('coordonate') %}
{% set adresa = post.get_field('adress') %}

<div class='tease-loc' data-marker data-lng='{{ coordonate.lng }}' data-lat='{{ coordonate.lat}}' data-title='{{post.title}}'>
	<h4 class='tease-loc__title'><a href='{{post.link}}'>{{ post.title }}</a></h4>
	<div class='tease-loc__adress'>

	{% if coordonate %}
		<a href='http://www.google.com/maps/place/{{ coordonate.lat }},{{ coordonate.lng }}' target='_blank'>
			{{ adresa }}
		</a>
	{% else %}
		{{ adresa }}
	{% endif %}
	
	</div>
	<p class='tease-loc__description'>{{ post.content }}</p>
</div>