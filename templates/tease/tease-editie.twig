<div class='tease tease--editie'>
	<a class='tease__thumb' href='{{post.link}}' title='{{ post.title }}'>
		{% if post.thumbnail %}
			<img src='{{post.thumbnail.src | tease_size }}' alt='{{ post.title }}'/>
		{% else %}
			<img src='{{ default_thumbnail }}' alt='{{ post.title }}'/>
		{% endif %}
	</a>
	<h3 class='tease__title'><a href='{{post.link}}'>{{ post.title }}</a></h3>
	<p class='tease__tagline'>{{ post.get_field('tagline') }}</p>
</div>