{% extends 'single/single.twig' %}

{% set loc_adresa = post.get_field('adresa') %}
{% set loc_coordonate = post.get_field('coordonate') %}

{% block content %}
	<h1>{{post.title}}</h1>
	<p>
		{% if loc_coordonate %}
			{{ loc_adresa }}
		{% else %}
			<a href='{{loc_coordonate}}'>{{ loc_adresa }}</a>
		{% endif %}
	</p>

	<div class=''>
		{{ post.content }}
	</div>

	{% if evenimente %}
	<h2>Evenimente la {{post.title}}</h2>
	{% for eveniment in evenimente %}
		<h3>{{eveniment.title}}</h3>
		<p>{{eveniment.content}}</p>
	{% endfor %}
	{% endif %}
{% endblock %}