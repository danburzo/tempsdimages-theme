{% extends 'base.twig' %}

{% block content %}

	{% block editie_header %}
		{% include 'components/header-editie.twig' %}
	{% endblock %}

	{% block editie_title %}
		<h1 class='post__title'>{{post.title}}</h1>
	{% endblock %}

	{% block editie_content %}
		<div class='container-fluid'>
			<div class='row'>
				<div class='col-md-8'>
					<div class='post__content'>
						{{ post.content }}
					</div>
				</div>
			</div>
		</div>
	{% endblock %}

{% endblock %}