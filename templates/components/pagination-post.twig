{% if prev or next %}
	<div class='pagination pagination--post row'>
		<div class='col col-sm-6'>
			{% if prev %}
				{% 
					include 'tease/tease-post.twig' with {
						'post': prev
					}
				%}
			{% else %}
			<span class='pagination__item pagination__item--prev pagination__item--inactive'>
				&larr;
			</span>
			{% endif %}
		</div>

		<div class='col col-sm-6'>
			{% if next %}
				{% 
					include 'tease/tease-post.twig' with {
						'post': next
					}
				%}
			{% else %}
			<span class='pagination__item pagination__item--next pagination__item--inactive'>
				&rarr;
			</span>
			{% endif %}
		</div>
	</div>
{% endif %}