<!doctype html>
<html class="no-js" {{site.language_attributes}}>
	<head>
		{% include 'components/head.twig' %}
		{% block head %}
			<!-- additional things here -->
		{% endblock %}
	</head>
	<body class="{{body_class}} {% if editie_curenta %} editie-curenta {% endif %}">
		<div class='g__wrapper'>
			{% block header %}
				{% include 'components/header.twig' %}
			{% endblock %}

			<section role="main">
				<div class='container'>
					{% if title %}
						<h1>{{ title }}</h1>
					{% endif %}

					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>
			</section>

			{% block attachments %}
				{% include 'components/attachments.twig' %}
			{% endblock %}

			{% block gallery %}
				{% include 'components/gallery.twig' %}
			{% endblock %}
		</div>

		{% block footer %}
			{% include 'components/footer.twig' %}
		{% endblock %}
	</body>
</html>
